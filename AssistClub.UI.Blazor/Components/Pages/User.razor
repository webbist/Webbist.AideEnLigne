@page "/user"
@using AssistClub.UI.Blazor.HttpClients
@using AssistClub.UI.Blazor.Models

@inject UserHttpClient UserHttpClient

<PageTitle>@Localizer["Profile"]</PageTitle>

@if (_user != null)
{
    <div class="card">
        <div class="card-header">
            <h4>@Localizer["UserInfo"]</h4>
        </div>
        <div class="card-body">
            <p><strong>@Localizer["Fullname"]:</strong> @_user.Fullname</p>
            <p><strong>@Localizer["Email"]:</strong> @_user.Email</p>
            <p><strong>@Localizer["Photo"]:</strong> @_user.Photo</p>
            <p><strong>@Localizer["Club"]:</strong> @_user.Club</p>
            <p><strong>@Localizer["Microsite"]:</strong> @_user.Microsite</p>
        </div>
    </div>
} else
{
    <p>@Localizer["Loading"]</p>
}

@code {
    private UserViewModel? _user;
    
    protected override async Task OnInitializedAsync()
    {
        _user = await UserHttpClient.GetUserByEmail("carlos@gmail.com");
    }
}