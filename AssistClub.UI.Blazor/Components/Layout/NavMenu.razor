@inject IStringLocalizer<NavMenuResources> NavMenuLocalizer
@inject IConfiguration Configuration

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <NavLink class="navbar-brand" href="/">@Configuration["AppName"]</NavLink>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @NavMenuLocalizer["HomeLabel"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="AskQuestion">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> @NavMenuLocalizer["AskQuestionLabel"]
            </NavLink>
        </div>
    </nav>
</div>